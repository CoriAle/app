.modal-header
    //Seccion de Impresión
    div(print-section)
        div(ng-if="ctrl.eschica")
            .row
                .col-lg-12.col-sm-12.col-md-12.col-xs-12
                    h2 Pago Personal
            .row
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p
                        strong Pago &nbsp;
                        | Del {{ctrl.model.fecha_inicio | date:'dd/MM/yy hh:mm a'}}
                        strong Al &nbsp;
                        | {{ctrl.model.fecha_fin | date:'dd/MM/yy hh:mm a'}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p Quetzaltenango {{ctrl.hoy | date:'dd/MM/yy hh:mm a'}}
            .row
                .col-lg-12
                    p
                        | Al empleado:
                        strong {{ctrl.model.persona.nombre}}
            .row
                .col-lg-12.col-sm-12.col-md-12.col-xs-12
                    h2 Resumen de Sueldo
            .row
                .col-lg-6.col-sm-6.col-md-6.col-xs-6.pull-rigth
                    p En cuenta: {{ctrl.model.saldo_anterior | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p Adelanto: {{ctrl.model.adelanto | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6.pull-rigth
                    p Comisión Ventas: {{ctrl.model.comision_venta | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p Gastos con el Personal: {{ctrl.model.gastos_personal | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6.pull-rigth
                    p Comisión Botellas: {{ctrl.model.comision_servicio | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    | &nbsp;
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p Bailes: {{ctrl.model.bailes | currency: "Q ": 2}}
            .row
                .col-lg-6.col-sm-6.col-md-6.col-xs-6.pull-rigth
                    p Total por: {{ctrl.total | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p Monto a Pagar:
                        strong {{ctrl.model.a_pagar | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6.pull-rigth
                    p Saldo Actual: {{ctrl.model.saldo_actual | currency: "Q ": 2}}
            br
            .row
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p Recibí de Prestige la cantidad de
                        strong {{ctrl.model.a_pagar | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    label Firma Recibido
        div(ng-if="!ctrl.eschica")
            .row
                .col-lg-12.col-sm-12.col-md-12.col-xs-12
                    h2 Pago Personal
            .row
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p
                        strong Pago &nbsp;
                        | Del {{ctrl.model.fecha_inicio | date:'dd/MM/yy hh:mm a'}}
                        strong Al &nbsp;
                        | {{ctrl.model.fecha_fin | date:'dd/MM/yy hh:mm a'}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p Quetzaltenango {{ctrl.hoy | date:'dd/MM/yy hh:mm a'}}
            .row
                .col-lg-12
                    p
                        | Al empleado:
                        strong {{ctrl.model.persona.nombre}}
            .row
                .col-lg-12.col-sm-12.col-md-12.col-xs-12
                    h2 Resumen de Sueldo
            .row
                .col-lg-6.col-sm-6.col-md-6.col-xs-6.pull-rigth
                    p En cuenta: {{ctrl.model.saldo_anterior | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p Adelanto: {{ctrl.model.adelanto | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6.pull-rigth
                    p Sueldo Base: {{ctrl.model.persona.sueldo_cuenta | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p Gastos con el Personal: {{ctrl.model.gastos_personal | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6.pull-rigth
                    p Comisión Ventas: {{ctrl.model.comision_venta | currency: "Q ": 2}}
            .row
                .col-lg-6.col-sm-6.col-md-6.col-xs-6.pull-rigth
                    p Total por: {{ctrl.total | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p Monto a Pagar:
                        strong {{ctrl.model.a_pagar | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6.pull-rigth
                    p Saldo Actual: {{ctrl.model.saldo_actual | currency: "Q ": 2}}
            br
            .row
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    p Recibí de Prestige la cantidad de
                        strong {{ctrl.model.a_pagar | currency: "Q ": 2}}
                .col-lg-6.col-sm-6.col-md-6.col-xs-6
                    label Firma Recibido
    .modal-footer
        button.btn.btn-default(type="button", ng-click="ctrl.cancel()")
            i.fa.fa-times-circle
            |  Cerrar
        button.btn.btn-success(type="button", print-btn)
            i.fa.fa-print
            |  Imprimir
    // Fin sección de Impresión